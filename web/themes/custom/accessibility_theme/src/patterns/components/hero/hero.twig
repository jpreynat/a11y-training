{{ attach_library('accessibility_theme/hero') }}

<div class="hero {{ modifier }} {{- attributes ? attributes.class -}}"
  {{- attributes ? attributes|without(class) -}}>
  {# Media could be an image or video. #}
  {% if image %}
    <div class="hero__media">
      {%
        include '@accessibility_theme/media-item/media-item.twig' with {
          "image": image
        } only
      %}
    </div>
  {% endif %}

  <div class="hero__content">
    {% if title %}
      {%
        include '@accessibility_theme/heading/heading.twig' with {
          "title": title,
          "heading_level": heading_level,
          "modifier": "hero__heading"
        } only
      %}
    {% endif %}

    {% if body %}
      <div class="hero__body">
        {{ body }}
      </div>
    {% endif %}

    {% if button_text %}
      {%
        include '@accessibility_theme/button/button.twig' with {
          "text": button_text,
          "url": url
        } only
      %}
    {% endif %}
  </div>
</section>
